@model Final.Models.ViewModels.ProductViewModels.ProductViewModel

@{
	ViewData["Title"] = "Info";
}

<h1>Info</h1>

<div>
	<h4>Item</h4>
	<hr/>
	<dl class="row">
		<dt class="col-sm-2">
			<label asp-for="Name"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Name
		</dd>
		<dt class="col-sm-2">
			<label asp-for="SerialNumber"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.SerialNumber
		</dd>
		<dt class="col-sm-2">
			<label asp-for="AssemblyStatus"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.AssemblyStatus
		</dd>
	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
	<a asp-action="Index">Back to List</a>
</div>